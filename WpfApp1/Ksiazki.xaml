<Window x:Class="WpfApp1.KsiazkiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KsiazkiWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="KsiazkiDataGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Tytul" Binding="{Binding Tytul}" />
                <DataGridTextColumn Header="Autor" Binding="{Binding Autor}" />
                <DataGridTextColumn Header="Rok Wydania" Binding="{Binding RokWydania}" />
                <DataGridTextColumn Header="Gatunek" Binding="{Binding Gatunek}" />
                <DataGridTextColumn Header="Status Wypozyczenia" Binding="{Binding StatusWypozyczenia}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>