<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="C:\Users\remo2\source\repos\WpfApp1\WpfApp1\Resources\background2.png" Stretch="Fill" />
    </Window.Background>
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Foreground" Value="Gray" />
                <Setter Property="Tag" Value="placeholder" />
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="Foreground" Value="Black" />
                        <Setter Property="Tag" Value="" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="237*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="2" x:Name="FirstNameTextBox" Width="200" Height="27" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,98,0,0" Grid.RowSpan="3" Text="Imię i nazwisko" PreviewTextInput="TextBox_PreviewTextInput" />

        <TextBox Grid.Row="4" x:Name="PhoneNumberTextBox" Width="200" Height="26" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,146,0,0" Text="Numer telefonu" PreviewTextInput="NumberTextBox_PreviewTextInput" />

        <TextBox Grid.Row="4" x:Name="EmailTextBox" Width="200" Height="24" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,192,0,0" Text="E-mail" PreviewTextInput="EmailTextBox_PreviewTextInput" />

        <Button Content="Dodaj kontakt" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,255,137,0" Click="AddContactButton_Click" Grid.Row="4" />

        <Button Content="Przeglądaj kontakty" Width="144" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="244,15,0,0" Click="BrowseContactsButton_Click" Grid.Column="1" />

    </Grid>
</Window>
