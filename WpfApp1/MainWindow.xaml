<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="C:\Users\remo2\source\repos\WpfApp1\WpfApp1\Resources\background2.png" Stretch="Fill" />
    </Window.Background>
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="Tag" Value="" />
                <Style.Triggers>
                    <Trigger Property="Tag" Value="placeholder">
                        <Setter Property="Foreground" Value="Gray" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="2" x:Name="FirstNameTextBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,22,0,0" Grid.RowSpan="3" />

        <TextBox Grid.Row="4" x:Name="LastNameTextBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,67,0,0" />

        <TextBox Grid.Row="4" x:Name="PhoneNumberTextBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,110,0,0" />

        <TextBox Grid.Row="4" x:Name="EmailTextBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,157,0,0" />


        <Button Content="Dodaj kontakt" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,250,0" Click="AddContactButton_Click" />

        <Button Content="Przeglądaj kontakty" Width="144" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="570,15,0,0" Click="BrowseContactsButton_Click" />

    </Grid>
</Window>
