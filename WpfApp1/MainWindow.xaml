<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="C:\Users\remo2\source\repos\WpfApp1\WpfApp1\Resources\background2.png" Stretch="Fill" />
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Imię" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBox Grid.Row="0" x:Name="FirstNameTextBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,35,0,0" />

        <TextBlock Grid.Row="1" Text="Nazwisko" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" />
        <TextBox Grid.Row="1" x:Name="LastNameTextBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,95,0,0" />

        <TextBlock Grid.Row="2" Text="Numer Telefonu" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" />
        <TextBox Grid.Row="2" x:Name="PhoneNumberTextBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,155,0,0" />

        <Button Content="Dodaj kontakt" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,45,138,0" Click="AddContactButton_Click" Grid.RowSpan="2" />

        <Button Grid.Row="1" Content="Przeglądaj kontakty" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="537,33,0,0" Click="BrowseContactsButton_Click" />

    </Grid>
</Window>
